{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run_test",
            "type": "shell",
            "command": "scripts/run_test.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "build_debug",
            "type": "shell",
            "command": "make",
            "args": [
                "-j10"
            ],
            "options": {
                "cwd": "${workspaceFolder}/debug"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build_release",
            "type": "shell",
            "command": "make",
            "args": [
                "-j10"
            ],
            "options": {
                "cwd": "${workspaceFolder}/release"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "create_debug",
            "type": "shell",
            "command": "bash ./setup_debug.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "create_release",
            "type": "shell",
            "command": "bash ./setup_release.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}